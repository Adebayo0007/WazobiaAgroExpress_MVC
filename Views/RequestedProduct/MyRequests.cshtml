@using Agro_Express.Dtos.RequestedProduct
@using Agro_Express.Dtos
@model BaseResponse<IEnumerable<RequestedProductDto>> 
    <div class="form-head"><span class="reg-form">Requested Products</span></div>
    @if(TempData["success"] != null)
    {
        <h5>@TempData["success"] </h5>
    }
       @if(TempData["error"] != null)
    {
        <h5 style="color:red;">@TempData["error"] </h5>
    }
    @if(Model == null)
    {
        <h5>No Request yet ðŸ™„</h5>
    }
    else{
          @foreach (var item in Model.Data)
        {
            <div class="app-user">
        <div style="height:17rem !important" class="user-body">
            <div class="user-detail">
                 <div><span class="user-font">Buyer details ;</span> <span class="user-font"></span></div>
                <div><span class="user-font">Product: </span> <span class="user-font">@item.ProductName</span></div>
                 <div><span class="user-font">Email: </span> <span class="user-font">@item.BuyerEmail</span></div>
                 <div><span class="user-font">Location: </span> <span class="user-font">@item.BuyerLocalGovernment</span></div>
                  <div><span class="user-font">Number: </span> <span class="user-font">@item.BuyerPhoneNumber</span></div>
                 @* <div><span class="user-font">Farmer no: </span> <span class="user-font">@item.</span></div> *@

                       <div style=" margin-bottom: 1rem; margin-left: 1.5rem !important; margin-right: 1.6rem !important;" class="partial-sign">
                        <a class="partial-sign2" style="padding:0.2rem 2.4rem !important;color: white !important; font-weight: bolder;text-align: center;" class="nav-link text-dark" asp-area="" asp-controller="RequestedProduct" asp-action="AcceptRequest" asp-route-requestId="@item.Id"> Accept </a>
                         </div>
                    
                    </div>
                </div>
            </div><hr>
        }

    }
    
   
        
  

   
 