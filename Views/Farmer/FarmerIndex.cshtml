            <div><img src="~/Data/div.jpeg" alt="product" width="150vw" height="130vh"></div>
        </a>
        <div class="div">
            @* <a class="cart"><i class="fa-solid fa-cart-shopping"></i> <span>My Offers</span></a> *@
            <a asp-action="MyOffers" asp-controller="Farmer" class="cart"><i class="fa-solid fa-code-pull-request"></i> <span>My Offers</span></a>
